<div class="container">
    <h1 class="display-4 pulsate">Wimpy's Burger Eater!</h1>
    <hr>
    <p style="text-align: center">Help Wimpy select which burgers to eat!</p>
    {{!-- <img src="" alt=""> --}}
    <div class="row">
        <div class="col-md-6">
            <h3 style="text-align: center;text-shadow: 1px 1px 2px black, 0 0 25px antiquewhite, 0 0 5px whitesmoke;">Uneaten Burgers!</h3>
            {{#each burgers}}
            {{#unless devoured}}
            <form action="/{{this.id}}?_method=PUT" method="POST">
                <div class="input-group input-group-sm">
                    <span class="input-group-addon">{{this.id}}.{{this.burger_name}}</span>
                    <span><input type="hidden" name="devoured" value="true"></span>
                    <span class="input-group-btn"><button class="btn btn-danger" type="submit">Devour it!</button></span>
                </div>
            </form>

            {{/unless}}
            {{/each}}
        </div>
        <div class="col-md-6">
            <h3 style="text-align: center;text-shadow: 1px 1px 2px black, 0 0 25px antiquewhite, 0 0 5px whitesmoke">Eaten Burgers!</h3>
            {{#each burgers}}
            {{#if this.devoured}}
            <p class="eaten_burger"> {{this.id}}.{{this.burger_name}}</p>
            {{/if}}
            {{/each}}
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-12">
            <h3 style="text-align: center; text-shadow: 1px 1px 2px black, 0 0 25px antiquewhite, 0 0 5px whitesmoke;">Add a Burger</h3>
            <form action="/" method="POST" id="form-burger">
                <div class="form-input text-center" id="new-burger">
                    <input type="text" class="form-control" id="burger_name" name="burger_name" placeholder="Burge name">
                    <button class="btn btn-primary" type="submit" id="submit-burger"><i class="fas fa-arrow-right"></i>
                        Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>